    <!--    </TextView>-->
    <EditText
        android:id="@+id/tv_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/background_color"
        android:gravity="bottom|end"
        android:maxLines="10"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/text_color"
        android:textSize="15sp"></EditText>

    <LinearLayout
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/button_color"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/bt_sin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#000"
                        android:text="sin"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color"
                        android:textSize="15sp"
                        app:cornerRadius="0dp">
                    </Button>
                    <Button
                        android:id="@+id/bt_cos"
                        android:text="cos"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:background="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt_tg"
                        android:text="tg"
                        android:textAllCaps="false"
                        android:textSize="13sp"
                        android:textColor="@color/text_color"
                        android:background="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt_ctg"
                        android:text="ctg"
                        android:textAllCaps="false"
                        android:textSize="13sp"
                        android:textColor="@color/text_color"
                        android:background="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt_log"
                        android:text="log"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:background="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt_square"
                        android:text="х²"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:background="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>

                    <Button
                        android:id="@+id/bt_sqrt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#000"
                        android:text="√"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color"
                        android:textSize="15sp"></Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/bt_ac"
                        android:text="AC"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:background="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt_c"
                        android:text="C"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:background="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt_bracket1"
                        android:text="("
                        android:textSize="13sp"
                        android:textColor="@color/text_color"
                        android:background="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt_bracket2"
                        android:text=")"
                        android:textSize="13sp"
                        android:textColor="@color/text_color"
                        android:background="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt_inv"
                        android:text="1/x"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:background="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt_div"
                        android:text="÷"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:background="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/bt7"
                        android:text="7"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:backgroundTint="@color/button_color"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt8"
                        android:text="8"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:backgroundTint="@color/button_color"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt9"
                        android:text="9"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:backgroundTint="@color/button_color"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt_mul"
                        android:text="×"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:background="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/bt4"
                        android:text="4"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:backgroundTint="@color/button_color"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt5"
                        android:text="5"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:backgroundTint="@color/button_color"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt6"
                        android:text="6"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:backgroundTint="@color/button_color"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt_plus"
                        android:text="+"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:background="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/bt1"
                        android:text="1"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:backgroundTint="@color/button_color"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt2"
                        android:text="2"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:backgroundTint="@color/button_color"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt3"
                        android:text="3"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:backgroundTint="@color/button_color"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt_min"
                        android:text="-"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:background="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/bt_pi"
                        android:text="π"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:backgroundTint="@color/button_color"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt0"
                        android:text="0"
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:backgroundTint="@color/button_color"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt_dot"
                        android:text="."
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:backgroundTint="@color/button_color"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bt_equal"
                        android:text="="
                        android:textSize="15sp"
                        android:textColor="@color/text_color"
                        android:background="#000"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
